primary = #20604f
secondary = #90b44b


html, body
  margin: 0
  height: 100%
  line-height: 1


h1, h2, h3, h4, ul, ol, dl, li, dt, dd, p, div, span, img, a, table, tr, th, td
  margin: 0;
  padding: 0;
  border: 0;
  font-weight: normal;
  font-size: 100%;
  vertical-align:baseline;


*
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

h1
  font-size: 2.2rem
  line-height: 1.5rem

h2
  font-size: 1.8rem
  line-height: 1.6rem
  margin: .5rem 0

h3
  font-size: 1.4rem
  line-height: 1.7rem
  margin: .5rem 0

h4
  font-size: 1.2rem
  line-height: 1.7rem




input[type="text"], textarea, select
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  height: 2rem
  border: 1px solid #e1e1e1
  padding: 0.3rem 0.5rem
  outline-color: secondary




main
  height: 100%
  display: flex

#graph
  flex: 1
  height: 100%
  overflow: auto

#sidebar
  height: 100%
  width: 380px
  min-width: 380px
  overflow-y: auto
  background: primary
  color: #fff
  border-left: 1px solid secondary

  nav
    height: 40px
    display: flex

    .device-info
      flex: 1
      cursor: pointer
    a
      padding: 0.1rem 1rem

#filterbox
  height: calc(100% - 40px)
  overflow-y: auto

  .filterbox-list
    width: 100%
    table
      width: 100%

  .filter-form
    padding: 0.5rem

  .table-signal, .table-ch
    width: 5ch

  td, th
    white-space: nowrap
    text-overflow: ellipsis
    max-width: 1rem
    overflow: hidden
    text-align: left
    padding: 0.2rem 0.5rem

ul.band-tab
  display: flex
  list-style: none

  li
    background: primary
    color: #fff
    cursor: pointer
    font-size: 1rem
    line-height: 2rem
    padding: 0 1rem;
    margin: 0.5rem
    text-align: center;
    text-decoration: none;
    white-space: nowrap;

    &.active
      background: secondary
      color: #000



.tooltip
  background: rgba(0, 0, 0, 0.8)
  color: #fff
  margin: 1rem
  padding: 1rem
  line-height: 1.4rem


#preference
  padding: 1rem
  height: calc(100% - 40px)
  background: #fff
  color: #444
  overflow-y: auto

  h4
    margin-top: 1rem
    margin-bottom: 0.5rem

